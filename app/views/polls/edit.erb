<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <center> <h2>Edit Polly</h2> </center>
    <div class="content">
      <p>
        <form action="/polls/<%=@poll.id%>" method="post">
        <input type="hidden" name="_method" value="patch">

            <h3> Number of Questions: </h3>
            <p id="result">**Your Past Data is Already Stored, Just Click Update to Re-populate**</p> 

            
            <h3> Select the Number of Questions you Want for this Polly </h3>
            <select id="number">
              <option value = "1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5" selected>5</option>
            </select>
    
            <script>
                function GetSelectedValue()
                {
                    var e = document.getElementById("number");                  
                    var result = e.options[e.selectedIndex].value;                   
                    document.getElementById("result").innerHTML = result;            
                    if (result == "1")
                    {
                      document.getElementById("ONE").style.display="block";
                      document.getElementById("TWO").style.display="none";
                      document.getElementById("THREE").style.display="none";
                      document.getElementById("FOUR").style.display="none";
                      document.getElementById("FIVE").style.display="none";
                    }
                    if (result == "2")
                    {
                      document.getElementById("ONE").style.display="block";
                      document.getElementById("TWO").style.display="block";
                      document.getElementById("THREE").style.display="none";
                      document.getElementById("FOUR").style.display="none";
                      document.getElementById("FIVE").style.display="none";
                    }
                    if (result == "3")
                    {
                      document.getElementById("ONE").style.display="block";
                      document.getElementById("TWO").style.display="block";
                      document.getElementById("THREE").style.display="block";
                      document.getElementById("FOUR").style.display="none";
                      document.getElementById("FIVE").style.display="none";
                    }
                    if (result == "4")
                    {
                        document.getElementById("ONE").style.display="block";
                        document.getElementById("TWO").style.display="block";
                        document.getElementById("THREE").style.display="block";
                        document.getElementById("FOUR").style.display="block";
                        document.getElementById("FIVE").style.display="none";
                    }
                    if (result == "5")
                    {
                        document.getElementById("ONE").style.display="block";
                        document.getElementById("TWO").style.display="block";
                        document.getElementById("THREE").style.display="block";
                        document.getElementById("FOUR").style.display="block";
                        document.getElementById("FIVE").style.display="block";
                    }
                }   
            </script>

            <button type="button" onclick="GetSelectedValue()">Update</button>
                                 
            <div id="ONE" style="display:none;">
              <label for="t1"><h3> Polly Name: </h3></label> 
              <input type="text" name="t1" value="<%=@poll.title%>">
              <br>
            
              <label for="q1"><h3> Question 1: </h3></label> 
              <input type="text" name="q1" value="<%=@poll.questions[0].content%>">

              <label for="pa1"><h4> Possible Answer 1: </h4></label> 
              <input type="text" name="pa1" value="<%=@poll.questions[0].possible_answers[0].content%>">
  
              <label for="pa2"><h4> Possible Answer 2: </h4></label> 
              <input type="text" name="pa2" value="<%=@poll.questions[0].possible_answers[1].content%>">
  
              <label for="pa3"><h4> Possible Answer 3: </h4></label> 
              <input type="text" name="pa3" value="<%=@poll.questions[0].possible_answers[2].content%>">
  
              <label for="pa4"><h4> Possible Answer 4: </h4></label> 
              <input type="text" name="pa4" value="<%=@poll.questions[0].possible_answers[3].content%>">
            </div> 
            
            <br>

            <div id="TWO" style="display:none;">
              <label for="q2"><h3> Question 2: </h3></label> 
              <input type="text" name="q2" value="<%=@poll.questions[1].content%>">

              <label for="pa5"><h4> Possible Answer 1: </h4></label> 
              <input type="text" name="pa5" value="<%=@poll.questions[1].possible_answers[0].content%>">

