              <label for="pa20"><h4> Possible Answer 4: </h4></label> 
              <input type="text" name="pa20" value="<%=@poll.questions[4].possible_answers[3].content%>">
            </div> 
        
        <br>
        <br>
        <input type="submit">
        </form>            
      </p>
