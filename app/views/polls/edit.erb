              <label for="pa7"><h4> Possible Answer 3: </h4></label> 
              <input type="text" name="pa7" value="<%=@poll.questions[1].possible_answers[2].content%>">

              <label for="pa8"><h4> Possible Answer 4: </h4></label> 
              <input type="text" name="pa8" value="<%=@poll.questions[1].possible_answers[3].content%>">
            </div> 

            <div id="THREE" style="display:none;">
              <label for="q3"><h3> Question 3: </h3></label> 
              <input type="text" name="q3" value="<%=@poll.questions[2].content%>">

              <label for="pa9"><h4> Possible Answer 1: </h4></label> 
              <input type="text" name="pa9" value="<%=@poll.questions[2].possible_answers[0].content%>">

              <label for="pa10"><h4> Possible Answer 2: </h4></label> 
              <input type="text" name="pa10" value="<%=@poll.questions[2].possible_answers[1].content%>">

              <label for="pa11"><h4> Possible Answer 3: </h4></label> 
